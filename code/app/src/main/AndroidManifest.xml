<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.ishelf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ListOfRequestsActivity"></activity>
        <activity android:name=".SignInActivity" />
        <activity android:name=".BookProfileActivity" />
        <activity android:name=".EditBookActivity" />
        <activity android:name=".ViewProfileActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".myBooksActivity"
            android:label="@string/my_books"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>